<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlItemQuinta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/quinta_item_fondo"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imItemQuinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerVertical="true"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_baseline_grass_24" />

    <TextView
        android:id="@+id/tvItemQuintaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imItemQuinta"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="10dp"
        android:textSize="20dp"
        android:text="Nombre de la quinta"/>

    <TextView
        android:id="@+id/tvItemQuintaDirección"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imItemQuinta"
        app:layout_constraintTop_toBottomOf="@id/tvItemQuintaNombre"
        android:paddingStart="20dp"
        android:textSize="15dp"
        android:text="direccion"/>

    <TextView
        android:id="@+id/tvItemQuintaFamiliaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvItemQuintaDirección"
        app:layout_constraintStart_toEndOf="@id/imItemQuinta"
        android:paddingStart="20dp"
        android:textSize="15dp"
        android:text="Familia"/>

    <ImageButton
        android:id="@+id/ibItemQuintaEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibItemQuintaBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
