<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".QuintaEditarActivity">
    <TextView
        android:id="@+id/tvQuintaEditarTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/editar_quinta"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Nombre de la Quinta"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/etQuintaEditarNombre"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Nombre"
        android:inputType="textCapWords"
        android:padding="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Nombre de la Familia"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etQuintaEditarFamiliaNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/montserrat_bold"
        android:inputType="none"
        android:padding="10dp"
        android:hint="Seleccione una Familia"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Dirección"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/etQuintaEditarDireccion"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Dirección"
        android:inputType="textCapWords"
        android:padding="10dp" />

    <Button
        android:id="@+id/btGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/guardar"
        app:cornerRadius="20dp"
        android:onClick="guardar"
        android:layout_marginTop="30dp" />


</LinearLayout>
