<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/fondo_item_visita"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_baseline_check_circle_outline_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:backgroundTint="@color/verde_claro"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewVisitaFamiliaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/verde_1"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewVisitaFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewVisitaDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</LinearLayout>
