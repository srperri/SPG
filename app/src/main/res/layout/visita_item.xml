<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:padding="15dp"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/fondo_item_visita">

    <ImageView
        android:id="@+id/ivItemVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_outline_24" />

    <TextView
        android:id="@+id/tvItemVisitaQuintaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Nombre de la quinta"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/ivItemVisita"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemVisitaFamiliaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Familia"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/ivItemVisita"
        app:layout_constraintTop_toBottomOf="@id/tvItemVisitaQuintaNombre" />

    <TextView
        android:id="@+id/tvItemVisitaDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/ivItemVisita"
        app:layout_constraintTop_toBottomOf="@id/tvItemVisitaFamiliaNombre" />

    <TextView
        android:id="@+id/tvItemVisitaFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:text="31/12/2022"
        app:layout_constraintEnd_toStartOf="@id/ibItemVisitaBorrar"
        app:layout_constraintTop_toTopOf="@id/tvItemVisitaDireccion" />



    <ImageButton
        android:id="@+id/ibItemVisitaEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibItemVisitaBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
